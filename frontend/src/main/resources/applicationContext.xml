<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.com.javastrike.pdfblitz.frontend.spring"/>

    <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
        <property name="basenames">
            <list>
                <value>locale/messages</value>
            </list>
        </property>
    </bean>

    <bean id="application" class="com.javastrike.pdfblitz.frontend.PdfBlitzApplication" />

    <bean id="documentManager" class="com.javastrike.pdfblitz.manager.DocumentManager" />

</beans>